<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @employee.name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @employee.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @employee.email %>
</p>



<p>
  <strong>Dept:</strong>
  <%= @employee.dept %>
</p>

<p>
  <strong>Role:</strong>
  <%= @employee.role %>
</p>

<p>
  <strong>Holidays:</strong>
  <%= @employee.holidays %>
</p>

<!-- Display the orders of a customer -->
<h2>Customer's orders</h2>
<% @customer.orders.each do |order| %>
<p>
<b>Order details:</b>
<%= order.details %>
</p>
<% end %>
<%= link_to 'Show Orders', customer_orders_path(@customer) %>

<%= link_to 'Edit', edit_employee_path(@employee), class: "btn btn-mini btn-danger" %> |
<%= link_to 'Accept Changes', employees_path, class: "btn btn-mini btn-success" %>
