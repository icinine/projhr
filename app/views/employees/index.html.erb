<p id="notice"><%= notice %></p>

<h1>Listing Employees</h1>

<div class="media">
  <div class="media-body">

        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Phone</th>
              <th>Email</th>
              <!--<th>String</th> -->
              <th>Dept</th>
              <th>Role</th>
              <th>Holidays</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @employees.each do |employee| %>
              <tr>
                <td><%= employee.name %></td>
                <td><%= employee.phone %></td>
                <td><%= employee.email %></td>
               <!-- <td><%= employee.string %></td>-->
                <td><%= employee.dept %></td>
                <td><%= employee.role %></td>
                <td><%= employee.holidays %></td>
                <td><%= link_to 'Show', employee, class: "btn btn-mini btn-info" %></td>
                <td><%= link_to 'Edit', edit_employee_path(employee), class: "btn btn-mini btn-success" %></td>
                <td><%= link_to 'Destroy', employee, method: :delete, class: "btn btn-mini btn-danger", data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
</div>
</div>
<br>

<%= link_to 'New Employee', new_employee_path, class: "btn btn-mini btn-success" %>
